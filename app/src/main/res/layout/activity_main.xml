<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/containerEDTV"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/emailEDTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="@drawable/own_edit_text_style"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/themeEDTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="@drawable/own_edit_text_style"
            android:drawableStart="@drawable/icon_subject"
            android:drawablePadding="10dp"
            android:hint="Theme"
            android:inputType="textEmailSubject"/>

        <EditText
            android:id="@+id/textEDTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="@drawable/own_edit_text_style"
            android:drawableStart="@drawable/icon_sms"
            android:drawablePadding="10dp"
            android:hint="Text"/>

    </LinearLayout>

    <Button
        android:id="@+id/sendBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:text="SEND"
        app:layout_constraintTop_toBottomOf="@id/containerEDTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>